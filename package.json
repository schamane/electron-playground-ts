{
  "name": "electron-playground-ts",
  "version": "1.0.0",
  "description": "A ts playground in electron",
  "scripts": {
    "clean:dist": "rm -rf dist",
    "clean": "npm run -s clean:dist",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron -r source-map-support/register ./dist/main.js"
  },
  "repository": "https://github.com/schamane/electron-playground-ts",
  "author": "GitHub",
  "license": "MIT",
  "keywords": [
    "Electron",
    "playground",
    "typescript"
  ],
  "devDependencies": {
    "@types/pixi.js": "^5.0.0",
    "electron": "^7.1.1",
    "electron-reload": "^1.5.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "pixi.js": "^5.2.0",
    "source-map-support": "^0.5.16"
  }
}
